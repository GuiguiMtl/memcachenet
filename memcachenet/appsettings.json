{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "memcachenet": "Debug",
      "memcachenet.MemCacheServer.MemCacheServer": "Debug",
      "memcachenet.MemCacheServer.MemCacheConnectionHandler": "Debug",
      "memcachenet.MemCacheServer.MemCacheCommandHandler": "Debug"
    }
  },
  "MemCacheServerSettings": {
    "Port": 11211,
    "MaxKeys": 3000,
    "MaxKeySizeBytes": 300,
    "MaxDataSizeBytes": 102400,
    "MaxTotalCacheSizeBytes": 1073741824,
    "ExpirationTimeSeconds": 60,
    "MaxConcurrentConnections": 10
  },
  "ExpirationManagerSettings": {
    "DelayBetweenExecutionSeconds": 60,
    "NumberOfKeysToDelete" : 20
  },
  "OpenTelemetry": {
    "ServiceName": "MemCacheNet",
    "ServiceVersion": "1.0.0",
    "TracingEnabled": true,
    "Exporters": {
      "Console": {
        "Enabled": false,
        "Targets": "Console"
      },
      "OTLP": {
        "Enabled": true,
        "Endpoint": "http://localhost:4317"
      }
    },
    "Sampling": {
      "Type": "AlwaysOn"
    }
  }
}