{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "memcachenet": "Debug"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "memcache-server.log",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff}] [{Level:u3}] [{SourceContext}] {Properties:j} {Message:lj}{NewLine}{Exception}",
          "shared": true,
          "fileSizeLimitBytes": 52428800,
          "rollOnFileSizeLimit": true,
          "retainedFileCountLimit": 5
        }
      }
    ]
  },
  "MemCacheServerSettings": {
    "Port": 11211,
    "MaxKeys": 3000,
    "MaxKeySizeBytes": 300,
    "MaxDataSizeBytes": 102400,
    "MaxTotalCacheSizeBytes": 1073741824,
    "ExpirationTimeSeconds": 60,
    "MaxConcurrentConnections": 500,
    "ConnectionIdleTimeoutSeconds": 60,
    "ReadTimeoutSeconds": 10
  },
  "ExpirationManagerSettings": {
    "DelayBetweenExecutionSeconds": 60,
    "NumberOfKeysToDelete" : 20
  },
  "OpenTelemetry": {
    "ServiceName": "MemCacheNet",
    "ServiceVersion": "1.0.0",
    "TracingEnabled": true,
    "Exporters": {
      "Console": {
        "Enabled": false,
        "Targets": "Console"
      },
      "OTLP": {
        "Enabled": true,
        "Endpoint": "http://localhost:4318"
      }
    },
    "Sampling": {
      "Type": "AlwaysOn"
    }
  }
}